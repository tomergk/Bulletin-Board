<%- include("partials/header"); -%>

<h1 class="post_header">Posts</h1>

<div class="home__container">

  <% posts.forEach(function(post){ %>
  <div class="home__post">
    <img style="height:50px; width: 40px" class="thumbtack" src="/images/thumbtack.png" alt="thumbtack-icon">
    <h3><%=post.title%></h3>
    <h4>
      <%=post.content.substring(0, 50) + " ..." %>
    </h4>
    <a class="read_more" href="/posts/<%=post._id%>">Read More</a>
    <p><%=post.author%></p>
    <h5><%=post.time%></h5>
  </div>
  <% }); %>

</div>

<%- include("partials/footer"); -%>
